<div class="row">
  <div class="col-lg-12">
  <h1>店舗情報</h1>
    <p>店舗名：<%= @restaurant.restaurant_name %></p>
    <p>電話番号：<%= @restaurant.phone %></p>
    <p>住所：<%= @restaurant.address %></p>
    <p><img src="<%= @restaurant.url %>" width="50" height="50"></p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for [@restaurant, @review],  :url => restaurant_reviews_path(@restaurant.id) do |f| %>
    <div class="form-group">
      <%= f.label :rate, "評価" %>
      <%= f.select :rate, [1, 2, 3, 4, 5] %><br />
      <%= f.label :body, "レビュー本文" %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit "投稿する",  class: "btn btn-default" %>

    <% end %>
  </div>
</div>



