<div class="row">
  <div class="col-lg-12">
  <h1>店舗情報</h1>
    <p>店舗名：<%= @restaurant.restaurant_name %></p>
    <p>電話番号：<%= @restaurant.phone %></p>
    <p>住所：<%= @restaurant.address %></p>
    <p><img src="<%= @restaurant.url %>" width="50" height="50"></p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
      <h2>レビュー</h2>
      <% @restaurant.reviews.each do |review| %>
        <div class="media">
          <div class="media-body">
            <p>
             <%= simple_format(review.body) %>
           </p>
          </div>
          <p class="text-muted">
            <%= review.created_at.strftime('%Y/%m/%d %H:%m') %>
            投稿者：<%= review.user.email %>さん
            <%= link_to '削除する', comment_path(comment),  method: :delete %>
          </p>
        </div>
      <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @review, url: { controller: :reviews, action: :create } do |f| %>
    <div class="form-group">
      <%= f.label :body, "レビュー本文" %><br />
      <%= f.text_area :body, class: "form-control" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <%= f.submit "投稿する", class: "btn btn-default" %>

    <% end %>
  </div>
</div>



