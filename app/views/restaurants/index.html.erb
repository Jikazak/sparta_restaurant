<div class="row">
  <div class="col-lg-8">
  <h1>レストラン一覧</h1>
   <% @restaurants.each do |restaurant| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <a href="/restaurants/<%= restaurant.id %>" class="img-responsive user-photo"><%= restaurant.restaurant_name %></a>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-4">
            <div class="thumbnail">
              <a href="/restaurants/<%= restaurant.id %>" class="img-responsive user-photo"><img src="<%= restaurant.url %>" ></a>
            </div>
          </div>
          <div class="col-sm-8">
            <p>口コミ <%= restaurant.reviews.count %>件
            </p>
            <% restaurant.reviews.each do |review| %>
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="row">
                    <div class="col-sm-2">
                      <div class="thumbnail pull-left">
                        <img src="<%= review.user.profile_url %>" >
                      </div>
                    </div>
                    <div class="col-sm-10">
                      <%= review.title %>
                      <small class="pull-right"><%= review.user.email %>さんの口コミ</small>
                      <hr>
                      <h5 class="text-danger">
                        <% if review.rate == 5  %>
                          ★★★★★ <%= review.rate %>
                        <% elsif review.rate >= 4 %>
                          ★★★★☆ <%= review.rate %>
                        <% elsif review.rate >= 3 %>
                          ★★★☆☆ <%= review.rate %>
                        <% elsif review.rate >= 2 %>
                          ★★☆☆☆ <%= review.rate %>
                        <% elsif review.rate >= 1 %>
                          ★☆☆☆☆ <%= review.rate %>
                        <% else %>
                          ☆☆☆☆☆ <%= review.rate %>
                        <% end %>
                      </h5>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to '新しくお店を登録する', new_restaurant_path, class: "btn btn-primary" %>

  </div>
</div>
