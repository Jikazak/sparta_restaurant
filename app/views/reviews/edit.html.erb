<div class="row">
  <div class="col-lg-12">
    <h1>レビュー編集：<%= @restaurant.restaurant_name %></h1>
<%= form_for [@restaurant, @review],  url: { controller: :reviews, action: :update }  do |f| %>
    <div class="form-group">
      <%= f.label :rate, "点数" %><br>
      <%= f.select :rate, [[ "★★★★★", "5"], [ "★★★★☆", "4"], [ "★★★☆☆", "3"], [ "★★☆☆☆", "2"], [ "★☆☆☆☆", "1"]], include_blank: true, class: "form-control" %><br />
    </div>
    <div class="form-group">
      <%= f.label :title, "レビュータイトル" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body, "レビュー本文" %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
    </div>
    <div class="form-group">
    <%= link_to '削除', restaurant_review_path(@restaurant, @review), method: :delete, class: "btn btn-danger"  %>
    </div>
<% end %>
  </div>
</div>
