<%= form_for [@restaurant, @review],  :url => restaurant_reviews_path(@restaurant.id) do |f| %>
    <div class="form-group">
      <%= f.label :rate, "点数" %><br>
      <%= f.select :rate, [[ "★★★★★", "5"], [ "★★★★☆", "4"], [ "★★★☆☆", "3"], [ "★★☆☆☆", "2"], [ "★☆☆☆☆", "1"]], include_blank: true, class: "form-control" %><br />
    </div>
    <div class="form-group">
      <%= f.label :title, "レビュータイトル" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body, "レビュー本文" %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
    </div>
<% end %>
