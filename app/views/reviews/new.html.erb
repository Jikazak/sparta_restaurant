
<div class="row">
  <div class="col-lg-12">
    <%= form_for [@restaurant, @review],  :url => restaurant_reviews_path(@restaurant.id) do |f| %>
    <div class="form-group">
      <%= f.label :rate, "評価" %>
      <%= f.select :rate, [1, 2, 3, 4, 5] %><br />
      <%= f.label :body, "レビュー本文" %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit "投稿する",  class: "btn btn-default" %>
    <% end %>
  </div>
</div>
